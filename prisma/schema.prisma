generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Material {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  quantity    Int      @default(0)
  unit        String
  unitPrice   Float    @default(0)
  category    String
  supplier    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([supplier])
}
