generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  name      String?
  role      UserRole    @default(WORKER)
  password  String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  // Relationships
  materialsCreated Material[] @relation("CreatedMaterials")
  materialsUpdated Material[] @relation("UpdatedMaterials")
  requests          Request[]
  
  @@map("User")
  @@index([email])
  @@index([role])
}

model Material {
  id            String    @id @default(cuid())
  sku           String    @unique
  name          String
  description   String?
  quantity      Int       @default(0)
  unit          String    @default("pieces")
  unitPrice     Float     @default(0)
  category      String?
  supplier      String?
  location      String?
  minStockLevel Int       @default(10)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relationships
  createdById   String?
  updatedById   String?
  createdBy     User?     @relation("CreatedMaterials", fields: [createdById], references: [id])
  updatedBy     User?     @relation("UpdatedMaterials", fields: [updatedById], references: [id])
  requests      Request[]
  
  @@map("Material")
  @@index([sku])
  @@index([name])
  @@index([category])
  @@index([supplier])
  @@index([createdAt])
}

model Request {
  id            String    @id @default(cuid())
  materialId    String
  material      Material  @relation(fields: [materialId], references: [id], onDelete: Cascade)
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  quantity      Int
  purpose       String?
  urgency       String?   @default("MEDIUM")
  status        String    @default("PENDING")
  approvedBy    String?
  approvedAt    DateTime?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@map("Request")
  @@index([materialId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum UserRole {
  ADMIN
  MANAGER
  WORKER
}
